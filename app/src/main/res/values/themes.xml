<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.MovieRecommender" parent="Theme.MaterialComponents.Light.DarkActionBar" >
        <!-- Definiciones del tema por defecto -->
        <item name="android:windowBackground">@mipmap/fondo_blanco</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="colorPrimary">@color/black</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Tema_claro" parent="Theme.MovieRecommender">
        <!-- Personalizaciones adicionales para el tema claro -->
        <item name="colorPrimary">@color/black</item>
    </style>

    <style name="Tema_Oscuro" parent="Theme.MovieRecommender">
        <!-- Personalizaciones adicionales para el tema oscuro -->
        <item name="android:windowBackground">@mipmap/fondo_oscuro</item>
        <item name="colorPrimary">@color/white</item>
    </style>

    <style name="BoldTitle">
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>
    <style name="Widget.MyApp.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
    </style>

</resources>